name: WakaTime

on:
  schedule:
    - cron: '0 0/2 * * *'

jobs:
  update-gist:
    runs-on: ubuntu-latest
    steps:
      - name: waka-box
        uses: matchai/waka-box@v4.0.5
        env:
          GH_TOKEN: ${{ secrets.GH_TOKEN }}
          GIST_ID: b670fbcc84bb0037221564cc9afaaa11
          WAKATIME_API_KEY: ${{ secrets.WAKATIME_API_KEY }}
